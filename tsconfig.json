{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "e2e"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "lib": ["es6", "dom", "es2015.iterable"],
  "compileOnSave": false,
  "buildOnSave": false
}
